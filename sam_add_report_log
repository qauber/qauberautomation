			FileUtils.copyFile(scr, new File("C:/Users/komandaa/Desktop/screenshot_add_report_" +n+ ".jpg"));
		} catch (IOException e) {
			e.printStackTrace();
		}
		*/
}
catch (Exception e) {
log.error("------------ERROR--------------------------------ERROR------------------------------");
log.error("Exception has occured : " + e.getMessage());

//screenshot
File scr = ((TakesScreenshot)wd).getScreenshotAs(OutputType.FILE);
try {
	FileUtils.copyFile(scr, new File("C:/Users/komandaa/Desktop/WORK/eclipse/WAVE-FIT/log/FAIL_Add_Report_"+curDate+"/screenshot"+curDate+".jpg"));
