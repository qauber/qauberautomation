FileUtils.copyFile(source, dest);


}
//screenshot
File scr = ((TakesScreenshot)wd).getScreenshotAs(OutputType.FILE);
try {
	FileUtils.copyFile(scr, new File("C:/Users/komandaa/Desktop/WORK/eclipse/WAVE-FIT/log/Add_Report_"+curDate+"/screenshot"+curDate+".jpg"));
} catch (IOException e) {
	e.printStackTrace();
}

		//Step13: Close browser
		wd.close();
		log.debug(new Timestamp(date.getTime()));
